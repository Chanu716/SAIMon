# SAIMon Environment Configuration
# Copy this file to .env and update with your values

# Application
APP_NAME=SAIMon
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# Prometheus
PROMETHEUS_URL=http://prometheus:9090
PROMETHEUS_TIMEOUT=30

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://redis:6379/0

# PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=saimon
POSTGRES_USER=saimon
POSTGRES_PASSWORD=saimon123
DATABASE_URL=postgresql://saimon:saimon123@postgres:5432/saimon

# Grafana
GRAFANA_URL=http://grafana:3000
GRAFANA_API_KEY=
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# ML Configuration
ML_MODEL_PATH=/app/models
ML_DATA_PATH=/app/data
ML_CONFIG_PATH=/app/config/ml_config.yml

# Training Configuration
ENABLE_AUTO_TRAINING=true
TRAINING_SCHEDULE=0 2 * * *  # Cron expression (2 AM daily)

# Anomaly Detection
ANOMALY_THRESHOLD=0.7
ANOMALY_WINDOW_SIZE=60
MIN_CONSECUTIVE_ANOMALIES=3

# Alerting
ENABLE_ALERTING=true
ALERT_COOLDOWN_MINUTES=15

# Slack Integration (Phase 5)
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#alerts
SLACK_BOT_TOKEN=

# Email Configuration (Phase 5)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=alerts@saimon.io
ALERT_EMAILS=admin@example.com

# Security
SECRET_KEY=your-secret-key-change-this-in-production
JWT_SECRET=your-jwt-secret-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Feature Flags
ENABLE_DEEP_LEARNING=false
ENABLE_ONLINE_LEARNING=false
ENABLE_FORECASTING=true

# Performance
MAX_WORKERS=4
INFERENCE_BATCH_SIZE=100
USE_GPU=false
CACHE_SIZE=1000

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9091
